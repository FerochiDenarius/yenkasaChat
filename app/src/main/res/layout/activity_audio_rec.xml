<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/recordingTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp">

        <!-- Mic (Start Recording) button - left -->
        <ImageButton
            android:id="@+id/btnStartRecording"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:contentDescription="Start"
            android:layout_alignParentStart="true"
            android:background="@null" />

        <!-- Stop -->
        <ImageButton
            android:id="@+id/btnStopRecording"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_pause"
            android:contentDescription="Stop"
            android:layout_centerInParent="true"
            android:layout_marginEnd="64dp"
            android:background="@null" />

        <!-- Play/Pause -->
        <ImageButton
            android:id="@+id/btnPlayPausePreview"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="Play"
            android:layout_toEndOf="@id/btnStopRecording"
            android:layout_marginStart="16dp"
            android:layout_alignTop="@id/btnStopRecording"
            android:background="@null" />

        <!-- Delete -->
        <ImageButton
            android:id="@+id/btnDeleteAudio"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Delete"
            android:layout_below="@id/btnStopRecording"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@null" />

        <!-- Send - right -->
        <ImageButton
            android:id="@+id/btnSendAudioFile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_send"
            android:contentDescription="Send"
            android:layout_alignParentEnd="true"
            android:background="@null" />
    </RelativeLayout>
</LinearLayout>
