<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/audioRecLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/recordingTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:layout_marginBottom="16dp" />

    <!-- Recording Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnStartRecording"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_mic"
            app:tint="@android:color/black"
            android:contentDescription="Start Recording" />

        <ImageButton
            android:id="@+id/btnStopRecording"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_stop"
            app:tint="@android:color/black"
            android:visibility="gone"
            android:contentDescription="Stop Recording" />
    </LinearLayout>

    <!-- Preview Controls -->
    <LinearLayout
        android:id="@+id/previewControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btnPlayPausePreview"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play"
            app:tint="@android:color/black"
            android:contentDescription="Play/Pause" />

        <ImageButton
            android:id="@+id/btnDeleteAudio"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            app:tint="@android:color/black"
            android:contentDescription="Delete" />

        <ImageButton
            android:id="@+id/btnSendAudioFile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_send"
            app:tint="@android:color/black"
            android:contentDescription="Send" />
    </LinearLayout>

</LinearLayout>
