<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="end"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_message_sent"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_marginStart="48dp"
        android:elevation="2dp"
        android:layout_marginBottom="4dp">

        <!-- Image -->
        <ImageView
            android:id="@+id/imageMessage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="300dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="6dp"
            android:visibility="gone" />

        <!-- Audio Player UI (Modern) -->
        <LinearLayout
            android:id="@+id/audioContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/btnPlayAudio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_play"
                android:contentDescription="Play audio" />

            <SeekBar
                android:id="@+id/audioSeekBar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/audioDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Video -->
        <VideoView
            android:id="@+id/videoMessage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:visibility="gone" />

        <!-- File -->
        <LinearLayout
            android:id="@+id/layoutFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📄 file.pdf"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Contact -->
        <LinearLayout
            android:id="@+id/layoutContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textContactInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👥 John Doe - +123456789"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Location -->
        <LinearLayout
            android:id="@+id/layoutLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📍 Location"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Text Message -->
        <TextView
            android:id="@+id/textMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:visibility="gone"
            android:maxWidth="250dp"
            android:minWidth="50dp"
            android:layout_marginTop="4dp" />

        <!-- Timestamp + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/textTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30 PM"
                android:textSize="10sp"
                android:textColor="#050505"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sent"
                android:textSize="10sp"
                android:textColor="#050505" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
